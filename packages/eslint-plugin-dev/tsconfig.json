{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": false,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true
  }
}
