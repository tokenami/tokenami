  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.3.1",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "engines": {
    "pnpm": ">= 8",
    "node": ">= 16"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
