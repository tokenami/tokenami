{
  "name": "tokenami",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "jjenzz",
    "email": "175330+jjenzz@users.noreply.github.com"
  },
  "scripts": {
    "prepare": "pnpm build",
    "dev": "pnpm --filter=./examples/remix dev",
    "build": "pnpm -r --filter=./packages/** build && pnpm -r --filter=./examples/design-system build",
    "clean": "rm -rf **/node_modules && rm -rf **/dist",
    "typecheck": "pnpm -r --parallel typecheck",
    "typecheck:ci": "pnpm -r --parallel typecheck:ci",
    "test": "pnpm -r --parallel test",
    "next": "auto shipit -vv --only-graduate-with-release-label"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "auto": "^11.1.6",
    "lerna": "^8.1.2",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "engines": {
    "pnpm": ">= 8",
    "node": ">= 16"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "auto": {
    "noDefaultLabels": true,
    "plugins": [
      "released",
      [
        "npm",
        {
          "subPackageChangelogs": false,
          "monorepoChangelog": false,
          "commitNextVersion": true
        }
      ]
    ],
    "labels": [
      {
        "name": "enhancement",
        "changelogTitle": "üöÄ Enhancement",
        "description": "Add enhancement to changelog when merged",
        "releaseType": "patch",
        "color": "#F1A60E"
      },
      {
        "name": "skip release",
        "description": "Preserve the current version when merged",
        "releaseType": "skip",
        "color": "#bf5416"
      },
      {
        "name": "docs",
        "changelogTitle": "üìù Documentation",
        "description": "Changes only affect the documentation",
        "releaseType": "none",
        "color": "#cfd3d7"
      }
    ]
  }
}
