{
  "name": "tokenami",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "pnpm build",
    "dev": "pnpm --filter=./examples/remix dev",
    "build": "pnpm -r --filter=./packages/** build",
    "clean": "rm -rf **/node_modules && rm -rf **/dist",
    "change": "changeset",
    "rc:publish": "changeset pre enter rc && changeset publish && changeset pre exit",
    "rc:version": "changeset pre enter rc && changeset version && changeset pre exit",
    "release:publish": "changeset publish",
    "release:version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.3.1",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "engines": {
    "pnpm": ">= 8",
    "node": ">= 16"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
