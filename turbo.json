{
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "env": ["CI", "PERCY_TOKEN", "PERCY_BRANCH", "PERCY_PULL_REQUEST"]
    },
    "test:watch": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["topo"]
    },
    "storylite": {}
  }
}
