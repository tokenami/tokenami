{
  "extends": "../../tsconfig.json",
  "include": ["remix.env.d.ts", ".tokenami/tokenami.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "target": "ES2019",
    "allowJs": true,
    // Remix takes care of building everything in `remix build`.
    "noEmit": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "plugins": [
      {
        "name": "@tokenami/ts-plugin-dev",
        "configPath": "./.tokenami/tokenami.config.cjs"
      }
    ]
  }
}
